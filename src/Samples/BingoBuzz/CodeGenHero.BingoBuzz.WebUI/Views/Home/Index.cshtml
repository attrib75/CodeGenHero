@model GameContext
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-12">
        <h2>Bingo Buzz!&trade;</h2>
        <p class="subhead">Finally a way to add some life to those boring non-participation meetings and seminars!</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">

        <div class="alert alert-info" role="alert">Login using your microsoft account and get started right away!</div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">

        <div class="alert alert-info" role="alert">Select from an existing game or chose to create a new one!</div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">

        <div class="alert alert-info" role="alert">Create a game and invite coworkers to play with you. </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="alert alert-info" role="alert">Mark off squares when eligible and see who gets Bingo first!</div>
    </div>
</div>


<div class="row">

    <div class="col-md-9">
        <div class="bb-bingocard">
            <div class="bb-cardheader">BingoBuzz Card for @Model.CurrentBingoCard.GameName</div>

            <div class="bb-cardbody">
                @for (int x = 0; x < Model.CurrentBingoCard.Size; x++)
                {
                    <div class="bb-cardsquarerow">
                        @for (int y = 0; y < Model.CurrentBingoCard.Size; y++)
                        {
                            var square = Model.CurrentBingoCard.Squares[x, y];
                            if (square.IsSelected)
                            { 
                                <div class="bb-cardsquare-selected">
                                    <div>@square.Text</div>
                                </div>
                            }
                            else
                            {
                                <div class="bb-cardsquare">
                                    <div>@square.Text</div>
                                </div>
                            }


                        }
                    </div>

                }
            </div>

        </div>

    </div>
    <div class="col-md-3">
        <div class="well">

            <table class="table table-condensed">
                <tr>
                    <th scope="col">User Statistics for @Model.Username</th>
                </tr>
                <tr>
                    <th scope="row">Bingos!</th>
                    <td>@Model.UserStats_Bingos</td>
                </tr>
                <tr>
                    <th scope="row">Games</th>
                    <td>@Model.UserStats_Games</td>
                </tr>
                <tr>
                    <th scope="row">Clicks</th>
                    <td>@Model.UserStats_Clicks</td>
                </tr>
            </table>
        </div>


    </div>


</div>
